<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="420dp"
    android:orientation="vertical"
    android:elevation="3dp"
    android:background="@drawable/bg_note_item">

<!--    Header-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/item_note_tv_note_id"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:text="1/15"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="#f89920"
            android:textStyle="bold"
            android:background="@drawable/bg_note_id"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            >
            <TextView
                android:id="@+id/item_note_tv_note_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/item_note_tv_note_description"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="Description"
                android:textSize="16sp"
                android:ellipsize="end"
                />
        </LinearLayout>
    </LinearLayout>

<!--    image-->
    <ImageView
        android:id="@+id/item_note_iv_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/image_thac_ban_gioc"
        android:scaleType="fitXY"
        />
<!--    Note Detail-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/item_note_tv_time_mark"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Tittle"
            android:textSize="16sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/item_note_tv_note_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="start|top"
            android:text="content"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textColor="@color/black"
            />
    </LinearLayout>

<!--    Footer-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center_vertical|end"
        >
        <ImageButton
            android:id="@+id/item_note_ibt_edit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_edit"
            android:scaleType="fitXY"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@null"
            />
        <ImageButton
            android:id="@+id/item_note_ibt_share"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_share"
            android:scaleType="fitXY"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@null"
            />
        <ImageButton
            android:id="@+id/item_note_ibt_delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_delete"
            android:scaleType="fitXY"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@null"
            />
    </LinearLayout>
</LinearLayout>